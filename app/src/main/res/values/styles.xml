<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Theme with no Action Bar-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Book Activity Styles -->
    <style name="text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/welcome_text_size</item>
    </style>

    <style name="edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/edit_text_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/edit_text_margin_left_right</item>
        <item name="android:layout_marginTop">@dimen/element_margins</item>
        <item name="android:drawableEnd">@drawable/ic_search</item>
        <item name="android:drawableRight">@drawable/ic_search</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/element_margins</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <!-- Book List Activity styles -->
    <style name="list_item_element_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingTop">@dimen/element_padding</item>
    </style>

    <style name="book_title_style" parent="list_item_element_style">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
